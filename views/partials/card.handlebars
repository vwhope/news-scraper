<div class="card flex-row flex-wrap">
    <div class="card-header border-0">
        <img src="{{image}}" alt="article image" class="img-rounded" width=200; height=150>
    </div>
    <div class="card-block px-2">
        <h4 class="card-title">
            <a href="https://www.medicalnewstoday.com{{link}}">
            {{title}}
            </a>
        </h4>
        <p class="card-text">{{summary}}</p>

        <div class="saved" {{#unless saved}}hidden{{/unless}}>
            <button type="button" class="btn btn-success" data-toggle="modal" data-target='#notesModal{{_id}}'>Article Notes</button>
            <a href="#" class="btn btn-danger" onclick="saveArticle('{{_id}}', false)">Delete Saved Article</a>
        </div>

        <div class="unsaved" {{#if saved}}hidden{{/if}}>
            <a href="#" class="btn btn-danger" onclick="saveArticle('{{_id}}', true)">Save Article</a>
        </div>
    </div>
    <div class="w-100"></div>
    <div class="card-footer w-100 text-muted">
        {{friendlyDate date}}
    </div>
</div>